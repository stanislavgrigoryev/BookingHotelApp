<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        logicalFilePath="db/changelog/create-roles-table-20251017-changelog.xml">
    <changeSet id="create-roles-table-20251017-changelog" author="stanislav" failOnError="true">
        <createTable tableName="roles" remarks="Таблица ролей">
            <column name="id" type="bigint" autoIncrement="true" remarks="Уникальный идентификатор">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_roles"/>
            </column>
            <column name="authority" type="varchar(255)" remarks="Тип роли">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint" remarks="Ссылка на пользователя">
                <constraints foreignKeyName="fk_roles_user_id" references="users(id)"
                             deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>